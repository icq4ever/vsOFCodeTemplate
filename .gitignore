# Ignore everything inside .vscode
.vscode/*
.claude/
.vs/
# But keep shared build settings
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/c_cpp_properties.json

# Ignore user-specific settings (OS-specific configuration selection)
.vscode/settings.json

# VS / MSBuild intermediate & user files
*.suo
*.user
*.userosscache
*.sln.docstates
*.VC.db
*.VC.VC.opendb

# Build output directories
bin/
obj/
build/

# DLL files (keep folder structure, ignore .dll files)
dll/**/*.dll

# Local addons folder (addons are referenced from {OF_ROOT}/addons)
addons/

# Visual Studio cache
ipch/
*.aps
*.ncb
*.opendb

# CMake cache
CMakeFiles/
CMakeCache.txt
cmake_install.cmake
#Makefile

# macOS specific (for cross-platform use)
.DS_Store

# Windows thumbnail cache
Thumbs.db

# Log files
*.log

# Executables (optional, you can include Debug/Release folders separately)
*.exe
*.pdb
*.ilk

# DLL files (keep folder structure, ignore .dll files)
dll/**/*.dll
